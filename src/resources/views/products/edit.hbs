<div class="row product">
    <form class="form-create" method="POST" action="/products/{{product._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" value="{{product.name}}" id="name" name="name">
        </div>
        <div class="form-group">
            <label for="description">Mo ta</label>
            <textarea class="form-control" id="description" name="description">{{product.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="VideoId">Video ID</label>
            <input type="text" class="form-control" value="{{product.VideoId}}" id="VideoId" name="VideoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" value="{{product.level}}" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>